<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/home.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;500;700&display=swap" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <main>
    <section class="header">
      <header>
        <button type="button" class="btn btn-dark" onclick="window.location.href='/login';">Logout</button>
        <span class="nav_tweet"> @testuser </span>
        <a href="/quiz"><i class="fa-solid fa-plus"></i></a>
        <i class="fa-solid fa-house"></i>
      </header>
    </section>

    <section class="category">
      <div>
        <h5>Select a Category</h5>
      </div>
      <br>

      <div class="quiz_category">
        <% if (quizzesByCategory) { %>
          <% for (const category in quizzesByCategory) { %>
            <div class="dropdown">
              <button class="dropdown-btn"><%= category %></button>
              <div class="dropdown-content">
                <% quizzesByCategory[category].forEach(quiz => { %>
                  <div class="drop">
                    <a href="/attempt/<%= quiz.id %>"><%= quiz.quiz_link %></a>
                    <br>
                    <a href="" onclick="copyToClipboard('http://localhost:8080/attempt/<%= quiz.id %>')"><i class="fa fa-copy"></i></a>
                  </div>
                <% }); %>
              </div>
            </div>
            <br>
          <% } %>
        <% } else { %>
          <p>No quizzes available</p>
        <% } %>
      </div>
    </section>
  </main>
</body>
</html>

